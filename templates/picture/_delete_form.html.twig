{% if picture is defined  %}

<form method="post" action="{{ path('app_picture_delete', {'id': picture.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
    <button class="btn">Delete</button>
</form>

{% else %}

<form method="post" action="{{ path('app_picture_delete', {'id': media.vars.value.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ media.vars.value.id ) }}">
    <button class="btn">Delete</button>
</form>

{% endif %}
