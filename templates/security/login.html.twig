{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<!-- ======= Contact Section ======= -->
<div class="container miniforms mt-5 mb-1 col-4" height="100%">
  <div class="row justify-content-center">
    <section class="contact">
      <div class="container mt-4 mb-4 minidisappear">
        <div class="section-header">
          <h3 class="section-title">Sign in</h3>
        </div>
      </div>
      {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
      {% endif %}
      <div class="gx-4 gx-lg-5 d-flex flex-column justify-content-center align-items-center border border-secondary">
        <div class="form pt-2 pb-2 ">
            <form id="contactForm" action="" method="post" class="border-0">
                <div class="container mt-4 mb-4 bigdisappear">
                <div class="section-header">
                    <h3 class="section-title">Sign in</h3>
                </div>
                </div>
                <div class="form-floating">
                    <label for="inputEmail" class="mb-2">Email</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="userName" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="form-floating">
                    <label for="inputPassword" class="mb-2">Password</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>
                <div class="form-floating my-3">
                    <a href="{{ path('app_forgotpwd') }}">Mot de passe oubli√© ?</a>
                </div>
                <br/>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <!-- Submit Button-->
                <div class="text-center">
                  <button type="submit" class="buttons">
                      Connection
                  </button>
                </div>
            </form>
        </div>
      </div>
    </section><!-- End Contact Section -->
  </div>
</div> 
{% endblock %}
{% block footer %}
<!-- ======= Footer ======= -->
<footer id="footer" class="mt-5">
  <div class="footer-top">
    <div class="footer-adapt">
        <a href="index.php"><i class="bi bi-house-fill"></i></a>
        <a href=""><i class="bi bi-bookmark-fill"></i></a>
        <a href="forms/contact.php" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link"><i class="bi bi-box-arrow-in-right"></i></a>
    </div>
  </div>
  <div class="container">
      &copy; Copyright 
      {{ "now"|date("Y") }}
  </div>
</footer><!-- End Footer -->    
{% endblock %}
